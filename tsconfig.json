{
	"compilerOptions": {
		"strict": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"skipLibCheck": true,
		"outDir": "dist/",
		"declaration": true,
		"target": "es3"
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
